{
	"manifest_version": 2,

	"name": "Apostrophe navigation extension",
	"short_name": "Apostrophe",
	"description": "link search navigation for Chrome",
	"version": "0.0.1.1",
	
	"browser_action": {
		"icons": {
			"128": "icon128.png",
			"48": "icon48.png",
			"32": "icon32.png",
			"16": "icon16.png"
		},
		"default_icon": "icon48.png",
		"default_popup": "popup.html"
	},

	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*", "*://*/*"],
			"js": ["searchScript.js"],
			"css": ["apostrophe.css"],
			"all_frames": true,
			"run_at": "document_end"
		}
	],


	"permissions": [
		"activeTab"
	]
	
}
